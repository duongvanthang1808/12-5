@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    a{
        cursor:pointer;
    }
    .pagination {
        margin:0;
    }
    #left-area a{
        color:black;
    }
    #left-area{
        background-color:#f5f5f5;
        margin-top:10px;
    }
    .header-product{
          border-bottom: 1px dotted #ddd;
    margin-bottom: 10px;
    }
     .thumbnail {
        background-color: transparent;
        -webkit-transition: all .3s ease-in-out;
        transition: all .3s ease-in-out;
        border:0;
         width: 33%;
        padding: 10px 25px !important;
    }
     .thumbnail>div{
          -webkit-transition: all .3s ease-in-out;
        transition: all .3s ease-in-out;
        padding:5px;
     }
    .img-thumbnail {
        border: none;
        background-color: transparent;
        max-height:400px;
    }
    .thumbnail:hover>div{
       box-shadow: 0 0 20px rgba(0,0,0,.15);
    }
    .title{
       text-transform:uppercase;
       font-weight:600;
       display:block;
    }
    .price{
       
    }
    .product-info{
        border-top:1px dotted #ddd;
        padding-top:10px;
        margin-top:10px;
    }
    
</style>
<ul class="breadcrumb" style="background-color:transparent">
    <li><a href="/Shop/Index">Shop</a></li>
    <li><a href="/Shop/AllProducts">Products</a></li>
</ul>
<div class="row" id="wrapper-area" style="margin:0;">
    <div class="col-sm-3" id="left-area">
        <div class="header-product">
            <h2><a href="/Shop/Products/@ViewBag.Title">Clothing</a></h2>
        </div>
        <form role="form">
            <div class="form-group">
                <label for="order">Loại:</label>
                <select class="form-control" id="kind">
                    <option>Tất cả</option>
                    <option>Quần</option>
                    <option>Áo</option>
                </select>
            </div>
            <div class="form-group">
                <label for="order">Sắp xếp theo:</label>
                <select class="form-control" id="order">
                    <option>Mới nhất</option>
                    <option>Giá giảm dần</option>
                    <option>Giá tăng dần</option>
                </select>
            </div>
            <div class="form-group">
                <label for="range">Khoảng giá:</label>
                <select class="form-control" id="range">
                    <option data-id="10000000">Dưới 2 triệu</option>
                    <option data-id="1000000" selected>Dưới 1 triệu</option>
                    <option data-id="500000">Dưới 5 trăm</option>
                    <option data-id="300000">Dưới 3 trăm</option>
                    <option data-id="200000">Dưới 2 trăm</option>
                </select>
            </div>
        </form>
        <label>Trang sản phẩm:</label> 
        <div id="pagination"></div>
    </div>
    <div class="col-sm-9">
           <div id="replace"></div>
    </div>
</div>
<script src="~/Scripts/product.js"></script>